<!-- Glitter generator -->
<script>
    for (let i = 0; i < 25; i++) {
        let g = document.createElement("div");
        g.className = "glitter";
        g.style.left = Math.random() * window.innerWidth + "px";
        g.style.top = Math.random() * window.innerHeight + "px";
        g.style.animationDelay = (Math.random() * 5) + "s";
        document.body.appendChild(g);
    }
</script>

