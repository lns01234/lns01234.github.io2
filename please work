<script>
    const roles = document.querySelectorAll(".role");
    const branches = document.querySelectorAll(".branch");

    roles.forEach(role => {
        role.addEventListener("dragstart", e => {
            e.dataTransfer.effectAllowed = "move";
            e.dataTransfer.setData("text/plain", role.outerHTML);
            role.classList.add("dragging");
        });

        role.addEventListener("dragend", () => {
            role.classList.remove("dragging");
            branches.forEach(b => b.classList.remove("dragover"));
        });
    });

    branches.forEach(branch => {
        branch.addEventListener("dragover", e => {
            e.preventDefault();
            e.dataTransfer.dropEffect = "move";
            branch.classList.add("dragover");
        });

        branch.addEventListener("dragleave", e => {
            if (e.target === branch) {
                branch.classList.remove("dragover");
            }
        });

        branch.addEventListener("drop", e => {
            e.preventDefault();
            branch.classList.remove("dragover");
            const dragged = document.querySelector(".dragging");
            if (dragged) {
                branch.appendChild(dragged);
                checkWin();
            }
        });
    });

    function checkWin() {
        let allCorrect = true;
        let branchesHaveRoles = true;
        let correctCount = 0;
        let totalRoles = 6;

        document.querySelectorAll(".branch").forEach(branch => {
            const correctBranch = branch.dataset.branch;
            const roles = branch.querySelectorAll(".role");
            
            if (roles.length === 0) {
                branchesHaveRoles = false;
            }
            
            roles.forEach(role => {
                if (role.dataset.branch === correctBranch) {
                    correctCount++;
                } else {
                    allCorrect = false;
                }
            });
        });

        // Update King George's reaction based on progress
        updateKingReaction(correctCount, totalRoles);

        if (allCorrect && branchesHaveRoles) {
            // Check that all 6 roles are placed
            const placedRoles = document.querySelectorAll(".branch .role").length;
            
            if (totalRoles === placedRoles) {
                document.getElementById("scale").style.transform = "rotate(0deg)";
                document.getElementById("message").textContent = "âœ¨ Victory! The Balance is Restored. âœ¨";
                createConfetti();
                // Final King George reaction
                const kingFace = document.getElementById("king-face");
                const kingSpeech = document.getElementById("king-speech");
                kingFace.textContent = "ðŸ‘‘ðŸ˜¤";
                kingSpeech.textContent = "You DARE dismantle my throne?!";
            }
        }
    }

    function updateKingReaction(correctCount, totalRoles) {
        const kingFace = document.getElementById("king-face");
        const kingSpeech = document.getElementById("king-speech");
        const progress = correctCount / totalRoles;

        if (progress === 0) {
            kingFace.textContent = "ðŸ‘‘ðŸ˜Š";
            kingSpeech.textContent = "Lovely day for absolute monarchy, what?";
        } else if (progress < 0.33) {
            kingFace.textContent = "ðŸ‘‘ðŸ¤¨";
            kingSpeech.textContent = "What are you doing with my powers?";
        } else if (progress < 0.67) {
            kingFace.textContent = "ðŸ‘‘ðŸ˜ ";
            kingSpeech.textContent = "How DARE you!";
        } else if (progress < 1) {
            kingFace.textContent = "ðŸ‘‘ðŸ¤¬";
            kingSpeech.textContent = "UNACCEPTABLE!";
        }
    }

    // Confetti effect on win
    function createConfetti() {
        for (let i = 0; i < 30; i++) {
            let confetti = document.createElement("div");
            confetti.style.position = "fixed";
            confetti.style.width = "10px";
            confetti.style.height = "10px";
            confetti.style.left = Math.random() * window.innerWidth + "px";
            confetti.style.top = "-10px";
            confetti.style.background = ["#FFD700", "#FFA500", "#FF6347", "#4169E1"][Math.floor(Math.random() * 4)];
            confetti.style.borderRadius = "50%";
            confetti.style.pointerEvents = "none";
            confetti.style.zIndex = "9999";
            document.body.appendChild(confetti);

            let xVel = (Math.random() - 0.5) * 8;
            let yVel = Math.random() * 5 + 3;
            let rotation = 0;

            let animationFrame = setInterval(() => {
                let rect = confetti.getBoundingClientRect();
                if (rect.top > window.innerHeight) {
                    clearInterval(animationFrame);
                    confetti.remove();
                    return;
                }
                confetti.style.left = (parseFloat(confetti.style.left) + xVel) + "px";
                confetti.style.top = (parseFloat(confetti.style.top) + yVel) + "px";
                rotation += 10;
                confetti.style.transform = `rotate(${rotation}deg)`;
                yVel += 0.2;
            }, 30);
        }
    }
</script>

</body>
